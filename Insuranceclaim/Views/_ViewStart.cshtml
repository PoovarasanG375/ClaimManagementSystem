@{
    if (User.Identity.IsAuthenticated)
    {
        // Check user roles. You need to configure roles in your Identity/authentication setup.
        if (User.IsInRole("Admin"))
        {
            Layout = "~/Views/Shared/_AdminLayout.cshtml";
        }
        else if (User.IsInRole("ClaimAdjuster"))
        {
            Layout = "~/Views/Shared/_ClaimAdjusterLayout.cshtml";
        }
        else if (User.IsInRole("Policyholder"))
        {
            Layout = "~/Views/Shared/_PolicyholderLayout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
    }
    else
    {
        // Default layout for unauthenticated users (e.g., login page)
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
