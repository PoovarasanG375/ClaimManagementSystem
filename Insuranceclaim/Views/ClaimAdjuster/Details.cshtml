@model Insuranceclaim.Models.Claim

@{
    ViewData["Title"] = "Claim Details";
    Layout = null; // Remove the default layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
            padding: 20px;
        }

        .navbar {
            background-color: #488AFB;
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: 500;
        }

        .logout-btn {
            color: white;
            text-decoration: none;
            font-weight: 500;
        }

        .card-header {
            background-color: #488AFB;
            color: white;
            font-weight: bold;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .details-label {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Claim Adjuster Portal</a>
            <a href="@Url.Action("Index", "Home")" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>
    </nav>

    <div class="container">
        <h2 class="mb-4">Claim Details</h2>
        <div class="card">
            <div class="card-header">
                Claim #@Model.ClaimId
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <span class="details-label">Policy ID:</span>
                        @Html.DisplayFor(model => model.PolicyId)
                    </div>
                    <div class="col-md-6 mb-3">
                        <span class="details-label">Policy Holder Name:</span>
                        @Html.DisplayFor(model => model.Policy.PolicyName)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <span class="details-label">Claim Amount:</span>
                        @Html.DisplayFor(model => model.ClaimAmount)
                    </div>
                    <div class="col-md-6 mb-3">
                        <span class="details-label">Claim Date:</span>
                        @Html.DisplayFor(model => model.ClaimDate)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <span class="details-label">Claim Status:</span>
                        @Html.DisplayFor(model => model.ClaimStatus)
                    </div>
                    <div class="col-md-6 mb-3">
                        <span class="details-label">Adjuster ID:</span>
                        @Html.DisplayFor(model => model.AdjusterId)
                    </div>
                </div>

                <div class="mb-3">
                    <span class="details-label">Description of Claim:</span>
                    @Html.DisplayFor(model => model.DescriptionofIncident)
                </div>

                <hr />

                <div class="mb-3">
                    <span class="details-label">Adjuster Notes:</span>
                    @Html.DisplayFor(model => model.AdjusterNotes)
                </div>

                <div class="mb-3">
                    <span class="details-label">Adjuster Approval Date:</span>
                    @Html.DisplayFor(model => model.AdjusterApprovalDate)
                </div>

                <hr />

               

                <hr />

                <div class="mb-3">
                    <span class="details-label">Documents:</span>
                    @if (Model.Documents != null && Model.Documents.Any())
                    {
                        <ul>
                            @foreach (var doc in Model.Documents)
                            {
                                <li>
                                    <a href="@doc.DocumentPath" target="_blank">@doc.DocumentName</a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No documents attached.</p>
                    }
                </div>

                <div class="d-flex justify-content-start mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.ClaimId" class="btn btn-primary me-2">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
