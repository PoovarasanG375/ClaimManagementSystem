@model Insuranceclaim.Models.Claim

@{
    ViewData["Title"] = "Edit Claim";
    Layout = null; // Ensure no default layout overrides the styling
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
            padding: 20px;
        }

        .navbar {
            background-color: #488AFB;
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: 500;
        }

        .logout-btn {
            color: white;
            text-decoration: none;
            font-weight: 500;
        }

        .card-header {
            background-color: #488AFB;
            color: white;
            font-weight: bold;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .btn-back {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Claim Adjuster Portal</a>
            <a href="@Url.Action("Index", "Home")" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>
    </nav>

    <div class="container">
        <h2 class="mb-4">Edit Claim</h2>
        <div class="card">
            <div class="card-header">
                Claim Details
            </div>
             <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ClaimId" />

                    <div class="row">
