                                <label asp-for="ClaimStatus" class="form-label"></label>
                                <select asp-for="ClaimStatus" class="form-control">
                                    <option value="pending admin review">Pending Admin Review</option>
                                    <option value="Rejected">Rejected</option>
                                </select>
                                <span asp-validation-for="ClaimStatus" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

@*                     <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="AdjusterId" class="form-label">Adjuster ID</label>
                                <select asp-for="AdjusterId" class="form-control" asp-items="ViewBag.AdjusterId"></select>
                                <span asp-validation-for="AdjusterId" class="text-danger"></span>
                            </div>
