                                <label asp-for="DescriptionofIncident" class="form-label" readonly></label>
<textarea asp-for="DescriptionofIncident" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="DescriptionofIncident" class="text-danger"></span>
                            </div>
                        </div>
                    </div> *@

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="AdjusterNotes" class="form-label"></label>
<textarea asp-for="AdjusterNotes" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="AdjusterNotes" class="text-danger"></span>
                            </div>
                    @*     </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="AdjusterApprovalDate" class="form-label"></label>
