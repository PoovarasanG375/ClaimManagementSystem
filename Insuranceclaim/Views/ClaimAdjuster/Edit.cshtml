                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ClaimDate" class="form-label"></label>
                                <input asp-for="ClaimDate" class="form-control" type="date" />
                                <span asp-validation-for="ClaimDate" class="text-danger"></span>
                            </div>
                        </div> *@
                        <div class="col-md-6">
