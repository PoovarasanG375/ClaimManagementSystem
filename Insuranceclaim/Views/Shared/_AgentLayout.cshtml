<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Agent Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/policyholder.css" />
    <style>
        .navbar {
            background-color: #488AFB !important;
        }

        .bg-blue {
            background-color: #488AFB !important;
        }

        .page-container {
            display: flex;
            min-height: calc(100vh - 56px);
        }

        .dashboard-content {
            flex-grow: 1;
            padding: 2rem;
        }
    </style>
</head>
<body>

    <header class="navbar navbar-expand-md navbar-dark bg-blue border-bottom shadow-sm">
        <div class="container-fluid">
            <!-- Logo Section -->
            <a class="navbar-brand d-flex align-items-center" href="#">
                <i class="fas fa-shield-alt logo me-2"></i>
                <span class="logo">Agent Portal</span>
            </a>

            <!-- Navbar Toggler for small screens -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar-nav" aria-controls="sidebar-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- User Info and Logout Section -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item d-flex align-items-center">
                        <span class="navbar-text text-white me-3">Welcome back, @User.Identity.Name</span>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Agents")" class="logout-btn nav-link"><i class="fas fa-sign-out-alt"></i> Back to Home Page</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container-fluid page-container">
        <nav class="col-md-3 bg-light sidebar py-4 collapse d-md-block" id="sidebar-nav">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Page == "AvailablePolicies" ? "active" : "")"
                       asp-controller="AgentPolicies" asp-action="AvailablePolicies" asp-route-userId="@ViewBag.TargetUserId">Available Policies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Page == "MyPolicies" ? "active" : "")"
                       asp-controller="AgentPolicies" asp-action="MyPolicies" asp-route-userId="@ViewBag.TargetUserId">My Policies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Page == "MyClaims" ? "active" : "")"
                       asp-controller="AgentPolicies" asp-action="MyClaims" asp-route-userId="@ViewBag.TargetUserId">My Claims</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Page == "Support" ? "active" : "")"
                       asp-controller="AgentPolicies" asp-action="Support" asp-route-userId="@ViewBag.TargetUserId">Support</a>
                </li>
            </ul>
        </nav>
        <main class="col-md-9 py-4 dashboard-content">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer>
        <p>&copy; 2025 The Healthy Mind. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>