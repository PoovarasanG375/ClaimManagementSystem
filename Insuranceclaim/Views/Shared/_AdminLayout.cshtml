<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #f4f7f9;
        }

        .dashboard-container {
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-image: linear-gradient(to bottom, #4d657e, #344f6c, #012347);
            padding: 20px;
            margin-top: 15px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            border-radius: 0px 10px 10px 0px;
            position: fixed;
            top: 50px; /* Adjust this value based on the header's height */
            left: 0;
            height: calc(100vh - 50px); /* Adjust to fill remaining viewport height */
            overflow-y: auto; /* Adds a scrollbar if content exceeds height */
            z-index: 999;
        }

            .sidebar h2 {
                font-size: 1.2rem;
                color: #fff;
                margin-bottom: 30px;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

            .sidebar li {
                margin-bottom: 10px;
            }

            .sidebar a {
                display: block;
                padding: 10px;
                
                color:#fff;
                text-decoration: none;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                .sidebar a.active {
                    background-color: #e6f7ff;
                    color:black;
                    font-weight: bold;
                }

                .sidebar a:hover:not(.active) {
                    background-color: #f0f0f0;
                }
                .sidebar a:hover{
                    color:black;
                }

        .main-content {
            flex-grow: 1;
            padding: 20px;
            background-color: #f4f7f9;
            margin-top: 20px; /* Same as header's height */
            margin-left: 250px;
        }

        .header {
            background-image: linear-gradient(to right, #4d657e, #344f6c, #012347);
            color: #ffffff;
            padding: 10px 10px;
            display: flex;
            flex-wrap: inherit;
            align-items: center;
            justify-content: space-between;
            flex-shrink: 0;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000; /* Ensures it stays on top of other content */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }


            /* .header h1 {
                font-size: 1.2rem;
                margin: 0;
                font-weight:bold;
            } */

        .logout-btn {
            background-color: transparent;
            color: #ffffff;
            border: 1px solid #fff;
            padding: 8px 15px;
            border-radius: 5px;
            text-decoration: none;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .card {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .card-icon {
            font-size: 3rem;
            color: #007bff;
            margin-bottom: 10px;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
        }

        .card-value {
            font-size: 1.8rem;
            font-weight: bold;
            color: #007bff;
        }

        .card-description {
            font-size: 0.9rem;
            color: #666;
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div class="header">
        <a class="navbar-brand d-flex aligned-tems-center ">
        <img src="https://cdn-icons-png.flaticon.com/128/2966/2966486.png" style="width:30px; height:30px" /> &nbsp; &nbsp;
        <span class="logo text-white">Admin Dashboard</span>
        </a>
        <span>
        <a href="@Url.Action("Index", "Home")" class="logout-btn">Logout</a>
        </span>
    </div>

    <div class="dashboard-container">
        <div class="sidebar">
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Admins")" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Admins" ? "active" : "")">Overview</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "AdminPolicies")" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminPolicies" ? "active" : "")">Policy Management</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "AdminClaims")" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminClaims" ? "active" : "")">Claim Oversight</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "AdminUsers")" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminUsers" ? "active" : "")">User Management</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "AdminSupportTickets")" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminSupportTickets" ? "active" : "")">Support Tickets</a>
                </li>
            </ul>
        </div>

        <div class="main-content">

            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
